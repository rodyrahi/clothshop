<!DOCTYPE html>
<html lang="en">
  <%- include('./header.ejs') %>

  <body>
    <%- include('./navbar.ejs') %>

    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card my-5">
            <form
              class="card-body cardbody-color p-lg-5"
              action="/employee/login"
              method="POST"
            >
              <h2>Login</h2>

              <div class="mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="username"
                  placeholder="name"
                  required
                />
              </div>

              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Password"
                  required
                />
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-dark px-5 mb-2 ">
                  Login
                </button>
              </div>

              <div class="text-center">
                <a href="/employee/register" class="btn btn-primary "
                  >Register</a
                >
                </div>
            </form>
            <p> <%= locals.error %></p>
           


          
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
